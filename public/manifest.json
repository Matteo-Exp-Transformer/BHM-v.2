{
  "name": "HACCP Business Manager",
  "short_name": "HACCP BM",
  "description": "Progressive Web App for digitalizing food safety management in restaurants",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/",
  "categories": ["business", "productivity", "food"],
  "lang": "it",
  "dir": "ltr",
  "icons": [
    {
      "src": "/icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Controllo Temperature",
      "short_name": "Temperature",
      "description": "Accesso rapido al controllo temperature",
      "url": "/conservazione"
    },
    {
      "name": "Inventario",
      "short_name": "Inventario",
      "description": "Gestione inventario prodotti",
      "url": "/inventario"
    },
    {
      "name": "Calendario",
      "short_name": "Calendario",
      "description": "Gestione attivit√† e scadenze",
      "url": "/attivita"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf", ".xlsx"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"],
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+haccp",
      "url": "/handle?protocol=%s"
    }
  ]
}