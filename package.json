{
  "name": "haccp-business-manager",
  "version": "0.1.0",
  "description": "HACCP Business Manager - Progressive Web App for food safety management in restaurants",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Matteo-Exp-Transformer/BHM-v.2.git"
  },
  "keywords": ["haccp", "pwa", "react", "typescript", "restaurant", "food-safety"],
  "author": "HACCP Business Manager Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Matteo-Exp-Transformer/BHM-v.2/issues"
  },
  "homepage": "https://github.com/Matteo-Exp-Transformer/BHM-v.2#readme"
