{
  "name": "haccp-business-manager",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Progressive Web App for digitalizing food safety management in restaurants",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:clean": "powershell -ExecutionPolicy Bypass -File cleanup.ps1 && vite build",
    "build:prod": "cross-env NODE_ENV=production npm run build:clean",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "preview:clean": "powershell -ExecutionPolicy Bypass -File cleanup.ps1 && vite build && vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit --skipLibCheck",
    "type-check:strict": "tsc --noEmit",
    "prepare": "husky install",
    "clean": "powershell -ExecutionPolicy Bypass -File cleanup.ps1",
    "clean:all": "powershell -ExecutionPolicy Bypass -File cleanup.ps1 && npm install",
    "deploy:dev": "npm run build:clean && vercel --env=development",
    "deploy:staging": "npm run build:prod && vercel --env=staging --prod",
    "deploy:prod": "npm run build:prod && vercel --env=production --prod",
    "deploy:force": "npm run clean && npm run build:prod && vercel --force --prod"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.20.0",
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/list": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/react": "^10.12.0",
    "@sentry/vite-plugin": "^4.3.0",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.62.2",
    "@tensorflow/tfjs": "^4.22.0",
    "@types/d3-array": "^3.2.2",
    "@types/d3-scale": "^4.0.9",
    "@types/d3-time": "^3.0.4",
    "@types/d3-time-format": "^4.0.3",
    "clsx": "^2.1.1",
    "d3-array": "^3.2.4",
    "d3-scale": "^4.0.2",
    "d3-time-format": "^4.1.0",
    "date-fns": "^4.1.0",
    "jspdf": "^2.5.2",
    "leaflet": "^1.9.4",
    "lucide-react": "latest",
    "ml-regression": "^6.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.28.0",
    "react-toastify": "^10.0.6",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.1.0",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/jest": "^30.0.0",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.3",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^0.21.1",
    "vitest": "^2.1.8",
    "workbox-window": "^7.3.0"
  },
  "keywords": [
    "haccp",
    "food-safety",
    "restaurant",
    "pwa",
    "react",
    "typescript"
  ],
  "author": "HACCP Business Manager Team",
  "license": "MIT"
