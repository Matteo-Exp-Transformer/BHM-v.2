    "chart.js": "^4.4.7",
    "jspdf": "^2.5.2",
    "lucide-react": "latest",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.0",
